/*用户*/
.user{
    height: 100rpx;
    margin-top: 30rpx;
    padding-left: 29rpx;
    display: flex;
    align-items: center;
}
.user-image{
    margin-right: 27rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: #aaaaaa;
    border-radius: 50%;
}
.user-info{
    flex: 1;
}
.user-text{
    font-size: 30rpx;
    color: #000;
    display: block;
}
.user-name{
    font-weight: bold;
}
.user-prompt{
    display: flex;
    align-items: center;
}
.user-strong-text{
    color: #28aeeb;
    padding: 0 10rpx;
}



/*蓝牙*/
.blue-tooth{
    position: absolute;
    top: 30rpx;
    right: 0;
    width: 120rpx;
    height: 100rpx;
    border-top-left-radius: 50%;
    border-bottom-left-radius: 50%;
    border: solid #28aeeb 2rpx;
    border-right: none;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
.blue-tooth-icon{
    width: 25rpx;
    height: 43rpx;
    background-color: #28aeeb;
    margin: 0 12rpx 0 22rpx;
}
.blue-tooth-text{
    font-size: 30rpx;
    color: #28aeeb;
}

/*血糖*/
.main{
    margin-top: 17rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.inner{
    position: relative;
    width: 450rpx;
    height: 450rpx;
    background-color: #28aeeb;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.con{
    width: 410rpx;
    height: 410rpx;
    background-color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.num{
    font-size: 166rpx;
    color: #29aeeb;
}
.unit{
    font-size: 22rpx;
    color: #29aeeb;
}
.time{
    font-size: 30rpx;
    color: #29aeeb;
    font-weight: bold;
}
.prompt{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fff;
    height: 88rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.prompt-text{
    display: block;
    font-size: 30rpx;
    color: #29aeeb;
}
.prompt-text-strong{
    font-weight: bold;
    margin-left: 5rpx;
}

/*计划*/
.plan{
    position: relative;
    height: 436rpx;
    background-color: #28aeeb;
    margin-top: 64rpx;
}
.plan-top{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 60rpx 0;
}
.plan-button{
    display: flex;
    align-items: center;
}
.plan-button-icon{
    width: 45rpx;
    height: 45rpx;
    margin-left: 10rpx;
}
.plan-button-text{
    font-size: 36rpx;
    color: #fff;
}
.plan-add{
    position: absolute;
    top: -64rpx;
    left: 50%;
    margin-left: -64rpx;
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.plan-add-text{
    display: block;
    font-size: 160rpx;
    color: #fff;
}
.plan-inner{
    position: relative;
    height: 92rpx;
    margin: 118rpx 32rpx 0;
    border: 1px solid #fff;
    border-radius: 30rpx;
    box-sizing: border-box;
}
.plan-title{
    position: absolute;
    left: 50%;
    right: 0;
    justify-content: center;
    display: flex;
    align-items: center;
    height: 40rpx;
    top: -20rpx;
    width: 306rpx;
    margin-left: -153rpx;
    background-color: #28aeeb;
}
.plan-title-icon{
    width: 40rpx;
    height: 40rpx;
    margin-left: 10rpx;
}
.plan-title-text{
    color: #fff;
    font-size: 30rpx;
}
.plan-con{
    position: absolute;
    left: 0;
    right: 0;
    display: flex;
    top: 70rpx;
}
.plan-item{
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.plan-item-check{
    position: relative;
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
    background-color: #fff;
}
.plan-item-check-icon{
    position: absolute;
    width: 44rpx;
    height: 44rpx;
}
.plan-item-text{
    font-size: 30rpx;
    color: #fff;
    margin-top: 20rpx;
}
