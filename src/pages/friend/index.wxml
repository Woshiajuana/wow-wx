<!--index.wxml-->
<view class="tab-section">
    <view class="tab-item {{numCurIndex === index && 'active'}}"
          bindtap="handleTabSwitch"
          data-index="{{index}}"
          wx:for="{{arrTab}}"
          wx:key="index">
        <text>{{ item.label }}</text>
    </view>
</view>

<view class="main-section">
    <wow-scroll
        class="main-content {{numCurIndex === key && 'active'}}"
        wx:for="{{arrTab}}"
        wx:for-item="tabItem"
        wx:for-index="tabIndex"
        wx:key="tabIndex">
        <view class="cell"
              wx:for="{{tabItem.arrData}}"
              wx:key="index">
            <view class="user-avatar">
                <image class="avatar"></image>
            </view>
            <view class="user-info">
                <text class="user-name">我是阿倦啊</text>
                <text class="user-signature">好好学习，天天向上</text>
            </view>
        </view>
    </wow-scroll>
</view>
