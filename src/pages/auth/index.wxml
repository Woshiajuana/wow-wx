<!--index.wxml-->
<view class="wrap">

    <image class="logo" mode="widthFix" src="/assets/images/logo-icon.png"></image>

    <view class="title">
        <text>XXXXXXXX</text>
    </view>

    <view class="sub-title">
        <text>XXXX 有限公司</text>
    </view>

    <view class="bar"></view>

    <view class="prompt">
        <text>该程序将获取以下授权</text>
    </view>

    <view class="prompt">
        <view class="dot"></view>
        <text>将获取您的公开信息（昵称、头像等）</text>
    </view>

    <view class="operate">
        <button
            class="operate-button cancel"
            bindtap="handleRefuse"
        >拒绝</button>
        <button
            class="operate-button sure"
            open-type="getUserInfo"
            bindgetuserinfo="handleGetUser"
        >登录</button>
    </view>

</view>
