
<view class="head">
    <view class="arrow left"></view>
    <text class="title">2020-12-12</text>
    <view class="arrow right"></view>
</view>

<view class="tr">
    <view class="td"
          wx:for="{{calendar$.week}}"
          wx:key="index">
        <text>{{item}}</text>
    </view>
</view>

<view class="tr"
      wx:for="{{calendar$.arrArrData}}"
      wx:for-item="arrData"
      wx:for-index="{{arrIndex}}"
      wx:key="arrIndex">
    <view class="td"
          wx:for="{{arrData}}"
          wx:key="index">
        <text>{{item}}</text>
    </view>
</view>

<view class="prompt">
    <view class="iconfont icon-shijian"></view>
    <text>2019/02/10</text>
</view>

<view class="photo">
    <image mode="aspectFill" src="https://img3.mukewang.com/szimg/5e1d990f0885d97306000338-360-202.jpg"></image>
    <view class="photo-content">
        <view class="iconfont icon-tianjia"></view>
    </view>
</view>

